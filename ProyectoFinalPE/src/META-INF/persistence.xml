<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="SpringData" transaction-type="RESOURCE_LOCAL">
	
	<class>pe.edu.cibertec.proyemp.model.Rol</class>
	<class>pe.edu.cibertec.proyemp.model.Departamento</class>
	<class>pe.edu.cibertec.proyemp.model.Empleado</class>
	<class>pe.edu.cibertec.proyemp.model.Cargo</class>
	<class>pe.edu.cibertec.proyemp.model.Cliente</class>
	<class>pe.edu.cibertec.proyemp.model.Producto</class>
<!-- 	<class>pe.edu.cibertec.proyemp.model.Vendedor</class> -->

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bdproyfinal" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="MySQL" />
			<property name="eclipselink.logging.level" value="OFF" />
 			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> 
		</properties>

	</persistence-unit>
</persistence>
